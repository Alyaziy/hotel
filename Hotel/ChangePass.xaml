<Window x:Class="Hotel.ChangePass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="ChangePass" Height="400" Width="450">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black" Margin="15" Padding="5">
            <StackPanel >
                <TextBlock Text="Текущий пароль" FontSize="20"/>
                <PasswordBox x:Name="passwordBox" Height="25"/>
                <TextBlock Text="Новый пароль" FontSize="20"/>
                <PasswordBox x:Name="newpassword" Height="25"/>
                <Label Content="Пароль" FontSize="20"/>
                <PasswordBox x:Name="confpassword" Height="25"/>
            </StackPanel>
            
        </Border>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Content="Сохранить" Click="SavePass" Width="105" Height="35" FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
